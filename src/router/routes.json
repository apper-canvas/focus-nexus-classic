{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Dashboard requires authentication",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/contacts": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Contacts page requires authentication",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/contacts/:id": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Contact details require authentication",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/companies": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Companies page requires authentication",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/pipeline": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Pipeline requires authentication",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login",
"excludeRedirectQuery": false
    }
  },
  "leads": {
    "access": "authenticated",
    "redirectConfig": {
      "excludeRedirectQuery": false
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Auth callback is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  },
  "/prompt-password/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password prompt is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  },
  "/reset-password/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password reset is public",
            "rule": "public"
          }
        ],
        "operator": "OR"
      }
    }
  }
}